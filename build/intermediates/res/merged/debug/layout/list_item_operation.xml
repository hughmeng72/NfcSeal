<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="@drawable/border"
    android:orientation="vertical" 
    >

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
    	android:layout_marginTop="8dp"
        android:layout_marginLeft="4dp"
         >
        
    <TextView
        android:id="@+id/operationTimeLabelTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/lock_time"
        android:textSize="14sp" />
    
    <TextView
        android:id="@+id/operationTimeTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="@string/lock_time"
        android:textSize="16sp" />
    
    </LinearLayout>
    
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="4dp"
         >
    
    <TextView
        android:id="@+id/operationPlaceLabelTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/lock_place"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/operationPlaceTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="@string/lock_place"
        android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/exceptionLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/label_exception_reason"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/exceptionReasonTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/label_exception_reason"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="4dp"
         >
    
    <TextView
        android:id="@+id/operatorLabelTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/operator"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/operatorTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="@string/operator"
        android:textSize="16sp" />

    </LinearLayout>
        
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/pictureImageView1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="2dp"
            android:layout_gravity="center_horizontal"
            android:src="@android:drawable/ic_menu_camera" />

        <ImageView
            android:id="@+id/pictureImageView2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="2dp"
            android:layout_gravity="center_horizontal"
            android:src="@android:drawable/ic_menu_camera" />

        <ImageView
            android:id="@+id/pictureImageView3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:src="@android:drawable/ic_menu_camera" />
    </LinearLayout>

</LinearLayout>